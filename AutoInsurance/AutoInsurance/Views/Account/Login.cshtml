@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Auto Insurance - Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        /* Full-Screen Background */
        body {
            background-color: #1a1a1a; /* Dark grey background */
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
        }

        /* Main Container */
        .container {
            display: flex;
            align-items: center;
            max-width: 900px;
            width: 100%;
        }

        /* Left Side Image */
        .image-box {
            flex: 1;
        }

            .image-box img {
                width: 100%;
                height: auto;
                border-radius: 10px;
                opacity: 0.85; /* Slight blending */
            }

        /* Right Side - Login Box */
        .login-box {
            flex: 1;
            background: rgba(255, 255, 255, 0.1); /* Semi-transparent blend */
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0px 0px 15px rgba(255, 255, 255, 0.3);
        }

        /* Branding in Top-Left */
        .branding {
            position: absolute;
            top: 20px;
            left: 20px;
            font-size: 24px;
            font-weight: bold;
            color: white;
        }
    </style>
</head>
<body>

    <div class="branding">Auto Insurance</div>

    <div class="container">
        <!-- Left Side - Auto Insurance Image -->
        <div class="image-box">
            <img src="https://tse4.mm.bing.net/th/id/OIP.s3y13ZvUMw3I-NQQLoEzLgHaHa?rs=1&pid=ImgDetMain" alt="Auto Insurance">
        </div>

        <!-- Right Side - Blended Login Form -->
        <div class="login-box">
            <h2 class="text-center">Login</h2>
            <form asp-action="Login" method="post">
                <div class="mb-3 text-start">
                    <label for="Email" class="form-label">Email</label>
                    <input type="email" name="Email" class="form-control" placeholder="Enter your email" required />
                </div>
                <div class="mb-3 text-start">
                    <label for="Password" class="form-label">Password</label>
                    <input type="password" name="Password" class="form-control" placeholder="Enter your password" required />
                </div>
                <button type="submit" class="btn btn-light w-100">Login</button>
            </form>
            <p class="mt-3">
                Not a user? <a href="/Account/Register" class="text-light">Sign up here</a>
            </p>
            @if (ViewBag.Error != null)
            {
                <p class="text-danger mt-2">@ViewBag.Error</p>
            }
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
