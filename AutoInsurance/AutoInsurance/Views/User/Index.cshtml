        }

            .slider-container img.active {
                opacity: 1;
            }

    /* Navigation Buttons */
    .prev-btn, .next-btn {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        background: rgba(0, 0, 0, 0.5);
        color: white;
        border: none;
