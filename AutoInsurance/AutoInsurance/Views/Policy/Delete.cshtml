@model AutoInsurance.Models.Policy
@{
    ViewData["Title"] = "Delete Policy";
}
<h2>@ViewData["Title"]</h2>

<div class="alert alert-warning">
    Are you sure you want to delete this policy?
</div>

<dl class="row">
    <dt class="col-sm-3">Policy Number</dt>
    <dd class="col-sm-9">@Model.PolicyNumber</dd>

    <dt class="col-sm-3">Vehicle Details</dt>
    <dd class="col-sm-9">@Model.VehicleDetails</dd>

    <dt class="col-sm-3">Status</dt>
    <dd class="col-sm-9">@Model.PolicyStatus</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="PolicyId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>